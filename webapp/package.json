{
  "name": "tcr",
  "version": "1.5.0",
  "description": "TCR Web Application - Angular 21 with modern FontAwesome 7 component-based icons. Note: Use --legacy-peer-deps for npm install/update due to third-party library compatibility",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build-prod": "ng build --output-path ../src/http/static/webapp --configuration production --extract-licenses false",
    "watch": "ng build --watch --configuration development",
    "postinstall": "echo 'Note: This project requires --legacy-peer-deps flag for npm operations due to Angular 21 compatibility'",
    "test": "ng test --source-map=false --browsers=ChromeHeadlessCustom --watch=false",
    "coverage": "ng test --source-map=true --browsers=ChromeHeadlessCustom --watch=false --code-coverage",
    "test-watch": "ng test",
    "lint": "ng lint",
    "clean": "rm -rf node_modules ../src/http/static/webapp",
    "reinstall": "npm run clean && npm install",
    "rebuild": "npm run reinstall && npm run build",
    "rebuild-prod": "npm run reinstall && npm run build-prod"
  },
  "private": true,
  "engines": {
    "npm": ">=10.8.1",
    "node": ">=22.5.1"
  },
  "dependencies": {
    "@angular/animations": "^21.0.0",
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/platform-browser-dynamic": "^21.0.0",
    "@angular/router": "^21.0.0",
    "@fortawesome/angular-fontawesome": "^4.0.0",
    "@fortawesome/fontawesome-svg-core": "^7.1.0",
    "@fortawesome/free-brands-svg-icons": "^7.1.0",
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "@ng-bootstrap/ng-bootstrap": "^18.0.0",
    "@popperjs/core": "^2.11.8",
    "@xterm/addon-unicode11": "^0.8.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "ansicolor": "^2.0.3",
    "bootstrap": "^5.3.3",
    "ng-terminal": "^6.4.0",
    "rxjs": "~7.8.1",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^21.0.0",
    "@angular-eslint/builder": "^21.0.1",
    "@angular-eslint/eslint-plugin": "^21.0.1",
    "@angular-eslint/eslint-plugin-template": "^21.0.1",
    "@angular-eslint/schematics": "^21.0.1",
    "@angular-eslint/template-parser": "^21.0.1",
    "@angular/cli": "^21.0.0",
    "@angular/compiler-cli": "^21.0.0",
    "@angular/localize": "^21.0.0",
    "@eslint/config-array": "^0.23.0",
    "@eslint/object-schema": "^3.0.0",
    "@types/jasmine": "~5.1.5",
    "@typescript-eslint/eslint-plugin": "8.48.1",
    "@typescript-eslint/parser": "8.48.1",
    "jasmine": "^5.5.0",
    "jasmine-core": "~5.13.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "karma-junit-reporter": "^2.0.1",
    "ng-mocks": "^14.13.2",
    "typescript": "~5.9.3"
  }
}
